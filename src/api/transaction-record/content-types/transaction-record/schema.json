{
  "kind": "collectionType",
  "collectionName": "transaction_records",
  "info": {
    "singularName": "transaction-record",
    "pluralName": "transaction-records",
    "displayName": "Transaction Record",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "BET",
        "DEPOSIT",
        "WITHDRAW",
        "MANUAL",
        "COUPON",
        "DEBIT",
        "CREDIT"
      ],
      "default": "BET",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "amount": {
      "required": true,
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "SUCCESS",
        "FAILED",
        "CANCEL",
        "PENDING",
        "REJECTED"
      ],
      "default": "PENDING",
      "required": true
    },
    "bet_record": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::bet-record.bet-record",
      "inversedBy": "transaction_record"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "transaction_records"
    },
    "currency": {
      "type": "string",
      "required": true
    },
    "updated_by_user_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "amount_type": {
      "type": "string",
      "required": true
    },
    "by": {
      "type": "string",
      "required": true
    }
  }
}
